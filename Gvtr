<body>
  <h1>ðŸ’° Earning Master ðŸ’°</h1>
  <p>Watch ads & complete tasks to earn points!</p>

  <div class="points">Your Points: <span id="points">0</span></div>

  <button onclick="watchAd()">Watch Ad</button>
  <button onclick="dailyTask()">Daily Task</button>
  <button onclick="redeem()">Redeem</button>

  <script>
    // Basic point system (Firebase not connected yet)
    let points = 0;

    function updatePoints() {
      document.getElementById("points").textContent = points;
      localStorage.setItem("userPoints", points);
    }

    function loadPoints() {
      const saved = localStorage.getItem("userPoints");
      if (saved) {
        points = parseInt(saved);
        updatePoints();
      }
    }

    function watchAd() {
      points += 10;
      alert("You earned 10 points from watching an ad!");
      updatePoints();
    }

    function dailyTask() {
      points += 20;
      alert("You completed a daily task and earned 20 points!");
      updatePoints();
    }

    function redeem() {
      if (points >= 100) {
        points -= 100;
        alert("Redeem successful! 100 points deducted.");
      } else {
        alert("Not enough points to redeem!");
      }
      updatePoints();
    }

    loadPoints();
  </script>
</body>
